<header class="bg-white shadow-md">
  <nav class="container mx-auto flex justify-between items-center px-6 py-4">
    
    <!-- Brand -->
    <a href="/" class="flex items-center space-x-2">
      <div class="h-8 w-8 rounded-full bg-[#FF385C]"></div>
      <span class="text-xl font-bold tracking-tight text-[#FF385C]">airbnb</span>
    </a>

    <!-- Desktop Menu -->
    <ul class="hidden md:flex items-center space-x-6 text-sm font-medium">
      <% if (isloggedIn) { %>
        <% if (userType === 'guest') { %>
          <li>
            <a href="/homes"
              class="px-3 py-2 rounded-lg transition 
              <%= currentPage === 'Home' ? 'bg-[#FF385C] text-white' : 'text-gray-700 hover:bg-gray-100' %>">
              Home-list
            </a>
          </li>
          <li>
            <a href="/favourites"
              class="px-3 py-2 rounded-lg transition 
              <%= currentPage === 'favourite' ? 'bg-[#FF385C] text-white' : 'text-gray-700 hover:bg-gray-100' %>">
              Favourite
            </a>
          </li>
          <li>
            <a href="/bookings"
              class="px-3 py-2 rounded-lg transition 
              <%= currentPage === 'bookings' ? 'bg-[#FF385C] text-white' : 'text-gray-700 hover:bg-gray-100' %>">
              Booking
            </a>
          </li>
        <% } else { %>
          <li>
            <a href="/host/Homeslist"
              class="px-3 py-2 rounded-lg transition 
              <%= currentPage === 'hostHome' ? 'bg-[#FF385C] text-white' : 'text-gray-700 hover:bg-gray-100' %>">
              Host Homes List
            </a>
          </li>
          <li>
            <a href="/host/add-home"
              class="px-3 py-2 rounded-lg transition 
              <%= currentPage === 'addHome' ? 'bg-[#FF385C] text-white' : 'text-gray-700 hover:bg-gray-100' %>">
              Add Home
            </a>
          </li>
        <% } %>
      <% } %>

      <% if (!isloggedIn) { %>
        <li>
          <a href="/login"
            class="px-3 py-2 rounded-lg transition 
            <%= currentPage === 'login' ? 'bg-[#FF385C] text-white' : 'text-gray-700 hover:bg-gray-100' %>">
            Login
          </a>
        </li>
        <li>
          <a href="/Signup"
            class="px-3 py-2 rounded-lg transition 
            <%= currentPage === 'signup' ? 'bg-[#FF385C] text-white' : 'text-gray-700 hover:bg-gray-100' %>">
            SignUp
          </a>
        </li>
      <% } else { %>
        <li>
          <a href="/logout"
            class="px-3 py-2 rounded-lg transition 
            <%= currentPage === 'logout' ? 'bg-[#FF385C] text-white' : 'text-gray-700 hover:bg-gray-100' %>">
            Logout
          </a>
        </li>
      <% } %>
    </ul>

    <!-- Mobile Hamburger -->
    <button id="menu-toggle" class="md:hidden flex flex-col space-y-1">
      <span class="w-6 h-0.5 bg-gray-800"></span>
      <span class="w-6 h-0.5 bg-gray-800"></span>
      <span class="w-6 h-0.5 bg-gray-800"></span>
    </button>
  </nav>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="hidden md:hidden bg-white border-t px-6 py-4 space-y-3 text-sm font-medium">
    <% if (isloggedIn) { %>
      <% if (userType === 'guest') { %>
        <a href="/homes" class="block px-3 py-2 rounded-lg <%= currentPage === 'Home' ? 'bg-[#FF385C] text-white' : 'text-gray-700 hover:bg-gray-100' %>">Home-list</a>
        <a href="/favourites" class="block px-3 py-2 rounded-lg <%= currentPage === 'favourite' ? 'bg-[#FF385C] text-white' : 'text-gray-700 hover:bg-gray-100' %>">Favourite</a>
        <a href="/bookings" class="block px-3 py-2 rounded-lg <%= currentPage === 'bookings' ? 'bg-[#FF385C] text-white' : 'text-gray-700 hover:bg-gray-100' %>">Booking</a>
      <% } else { %>
        <a href="/host/Homeslist" class="block px-3 py-2 rounded-lg <%= currentPage === 'hostHome' ? 'bg-[#FF385C] text-white' : 'text-gray-700 hover:bg-gray-100' %>">Host Homes List</a>
        <a href="/host/add-home" class="block px-3 py-2 rounded-lg <%= currentPage === 'addHome' ? 'bg-[#FF385C] text-white' : 'text-gray-700 hover:bg-gray-100' %>">Add Home</a>
      <% } %>
    <% } %>

    <% if (!isloggedIn) { %>
      <a href="/login" class="block px-3 py-2 rounded-lg <%= currentPage === 'login' ? 'bg-[#FF385C] text-white' : 'text-gray-700 hover:bg-gray-100' %>">Login</a>
      <a href="/Signup" class="block px-3 py-2 rounded-lg <%= currentPage === 'signup' ? 'bg-[#FF385C] text-white' : 'text-gray-700 hover:bg-gray-100' %>">SignUp</a>
    <% } else { %>
      <a href="/logout" class="block px-3 py-2 rounded-lg <%= currentPage === 'logout' ? 'bg-[#FF385C] text-white' : 'text-gray-700 hover:bg-gray-100' %>">Logout</a>
    <% } %>
  </div>
</header>

<script>
  // Mobile Menu Toggle
  const menuToggle = document.getElementById("menu-toggle");
  const mobileMenu = document.getElementById("mobile-menu");

  menuToggle.addEventListener("click", () => {
    mobileMenu.classList.toggle("hidden");
  });
</script>
