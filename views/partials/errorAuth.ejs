<% if (errors.length > 0) { %>
  <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 rounded-lg shadow-sm relative mb-6" role="alert">
    <div class="flex items-start">
      <div class="flex-shrink-0">
        <i class="fas fa-exclamation-circle text-red-500 text-xl"></i>
      </div>
      <div class="ml-3">
        <h3 class="text-lg font-semibold">There were some problems:</h3>
        <ul class="list-disc list-inside mt-2 space-y-1 text-sm">
          <% errors.forEach(error => { %>
            <li><%= error %></li>
          <% }) %>
        </ul>
      </div>
    </div>
    <!-- Close button -->
    <button onclick="this.parentElement.remove()" 
            class="absolute top-2 right-2 text-red-600 hover:text-red-800 transition">
      <i class="fas fa-times"></i>
    </button>
  </div>
<% } %>
