<%- include('../partials/head') %>
</head>
<body class="bg-gray-50">
  <%- include('../partials/nav') %>

  <main class="container mx-auto mt-6 sm:mt-10 px-4">
    <div class="bg-white rounded-xl shadow-lg p-6 sm:p-10 max-w-lg mx-auto">
      
      <!-- Title -->
      <h1 class="text-2xl sm:text-3xl font-bold mb-6 text-center text-gray-800">
        <%= editing ? "Edit" : "Register" %> Your Home on 
        <span class="text-[#FF385C]">Airbnb</span>
      </h1>

      <!-- Form -->
      <form action="/host/<%= editing ? 'editHomes' : 'add-home'%>" 
            method="POST" enctype="multipart/form-data" 
            class="space-y-4">
        
        <!-- Hidden ID -->
        <input type="hidden" name="id" value="<%= editing ? home._id : '' %>"/>

        <!-- House Name -->
        <input type="text" name="houseName" 
               value="<%= editing ? home.houseName : '' %>"
               placeholder="Enter your House Name"
               class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"/>

        <!-- Price -->
        <input type="text" name="price" 
               value="<%= editing ? home.price : '' %>"
               placeholder="Price Per Night"
               class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"/>

        <!-- Location -->
        <input type="text" name="location" 
               value="<%= editing ? home.location : '' %>"
               placeholder="Location"
               class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"/>

        <!-- Rating -->
        <input type="text" name="rating" 
               value="<%= editing ? home.rating : '' %>"
               placeholder="Rating"
               class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"/>

        <!-- Photo Upload -->
        <input type="file" name="photo" accept="image/jpg, image/jpeg, image/png"
               class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"/>

        <!-- Description -->
        <textarea name="description" placeholder="Enter Description"
                  class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500 h-32 resize-none"><%= editing ? home.description : '' %></textarea>

        <!-- Submit Button -->
        <input 
        type="submit" 
        value="<%= editing ? 'Update Home' : 'Add Home' %> " 
        class=" <%= editing ? 'w-full bg-green-500 text-white py-2 rounded-md hover:bg-green-600 transition duration-300' : 'w-full bg-red-500 text-white py-2 rounded-md hover:bg-red-600 transition duration-300' %>" />
      </form>
    </div>
  </main>
</body>
</html>
