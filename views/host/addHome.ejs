<%- include('../partials/head') %>
</head>
<body class="bg-gray-50 dark:bg-gray-900 text-gray-900 dark:text-gray-100 transition-colors duration-300">
  <%- include('../partials/nav') %>

  <main class="container mx-auto mt-6 px-4">
    <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-lg p-6 sm:p-8 max-w-md mx-auto transition-colors duration-300 animate-fadeInUp">

      <!-- Title -->
      <h1 class="text-2xl sm:text-3xl font-bold mb-6 text-center text-gray-800 dark:text-gray-100">
        <%= editing ? "Edit" : "Register" %> Your Home on 
        <span class="text-[#FF385C] dark:text-pink-400">Airbnb</span>
      </h1>

      <!-- Form -->
      <form action="/host/<%= editing ? 'editHomes' : 'add-home'%>" 
            method="POST" enctype="multipart/form-data" 
            class="space-y-4">

        <!-- Hidden ID -->
        <input type="hidden" name="id" value="<%= editing ? home._id : '' %>"/>

        <!-- House Name -->
        <div>
          <label class="block text-sm font-medium mb-1" for="houseName">House Name</label>
          <input type="text" id="houseName" name="houseName" 
                 value="<%= editing ? home.houseName : '' %>"
                 placeholder="Enter House Name"
                 class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md focus:outline-none focus:ring-2 focus:ring-red-500 dark:bg-gray-700 dark:text-gray-100 transition"/>
        </div>

        <!-- Price -->
        <div>
          <label class="block text-sm font-medium mb-1" for="price">Price (per night)</label>
          <input type="number" id="price" name="price" 
                 value="<%= editing ? home.price : '' %>"
                 placeholder="Price"
                 class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md focus:outline-none focus:ring-2 focus:ring-red-500 dark:bg-gray-700 dark:text-gray-100 transition"/>
        </div>

        <!-- Location -->
        <div>
          <label class="block text-sm font-medium mb-1" for="location">Location</label>
          <input type="text" id="location" name="location" 
                 value="<%= editing ? home.location : '' %>"
                 placeholder="Location"
                 class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md focus:outline-none focus:ring-2 focus:ring-red-500 dark:bg-gray-700 dark:text-gray-100 transition"/>
        </div>

        <!-- Rating -->
        <div>
          <label class="block text-sm font-medium mb-1" for="rating">Rating</label>
          <input type="number" step="0.1" id="rating" name="rating" 
                 value="<%= editing ? home.rating : '' %>"
                 placeholder="0â€“5"
                 class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md focus:outline-none focus:ring-2 focus:ring-red-500 dark:bg-gray-700 dark:text-gray-100 transition"/>
        </div>

        <!-- Photo Upload -->
        <div>
          <label class="block text-sm font-medium mb-1" for="photo">Upload Photo</label>
          <input type="file" id="photo" name="photo" accept="image/*"
                 class="w-full text-sm px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md focus:outline-none focus:ring-2 focus:ring-red-500 dark:bg-gray-700 dark:text-gray-100 transition"/>
        </div>

        <!-- Description -->
        <div>
          <label class="block text-sm font-medium mb-1" for="description">Description</label>
          <textarea id="description" name="description" placeholder="Enter Description"
                    class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md focus:outline-none focus:ring-2 focus:ring-red-500 h-24 resize-none dark:bg-gray-700 dark:text-gray-100 transition"><%= editing ? home.description : '' %></textarea>
        </div>

        <!-- Submit Button -->
        <button 
          type="submit"
          class="w-full py-2 rounded-md font-semibold transition duration-300 shadow-md hover:shadow-lg
                 <%= editing ? 'bg-green-500 hover:bg-green-600 text-white dark:bg-green-600 dark:hover:bg-green-700' 
                             : 'bg-red-500 hover:bg-red-600 text-white dark:bg-red-600 dark:hover:bg-red-700' %>">
          <%= editing ? 'Update Home' : 'Add Home' %>
        </button>
      </form>
    </div>
  </main>
  <style>
      @keyframes fadeInUp {
      0% {
        opacity: 0;
        transform: translateY(40px) scale(0.9);
      }
      100% {
        opacity: 1;
        transform: translateY(0) scale(1);
      }
    }
    .animate-fadeInUp {
      animation: fadeInUp 0.2s ease-out forwards;
    }
  </style>
</body>
</html>
