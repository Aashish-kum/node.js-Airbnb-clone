<%- include('../partials/head') %>
</head>
<body class="bg-gray-50">
  <%- include('../partials/nav') %>

  <main class="container mx-auto mt-6 px-4">
    <div class="bg-white rounded-xl shadow-lg p-6 sm:p-8 max-w-md mx-auto">
      
      <!-- Title -->
      <h1 class="text-xl sm:text-2xl font-bold mb-6 text-center text-gray-800">
        <%= editing ? "Edit" : "Register" %> Your Home on 
        <span class="text-[#FF385C]">Airbnb</span>
      </h1>

      <!-- Form -->
      <form action="/host/<%= editing ? 'editHomes' : 'add-home'%>" 
            method="POST" enctype="multipart/form-data" 
            class="space-y-4">
        
        <!-- Hidden ID -->
        <input type="hidden" name="id" value="<%= editing ? home._id : '' %>"/>

        <!-- House Name -->
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">House Name</label>
          <input type="text" name="houseName" 
                 value="<%= editing ? home.houseName : '' %>"
                 placeholder="Enter House Name"
                 class="w-full px-3 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"/>
        </div>

        <!-- Price -->
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Price (per night)</label>
          <input type="number" name="price" 
                 value="<%= editing ? home.price : '' %>"
                 placeholder="Price"
                 class="w-full px-3 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"/>
        </div>

        <!-- Location -->
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Location</label>
          <input type="text" name="location" 
                 value="<%= editing ? home.location : '' %>"
                 placeholder="Location"
                 class="w-full px-3 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"/>
        </div>

        <!-- Rating -->
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Rating</label>
          <input type="number" step="0.1" name="rating" 
                 value="<%= editing ? home.rating : '' %>"
                 placeholder="0â€“5"
                 class="w-full px-3 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"/>
        </div>

        <!-- Photo Upload -->
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Upload Photo</label>
          <input type="file" name="photo" accept="image/*"
                 class="w-full text-sm px-3 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"/>
        </div>

        <!-- Description -->
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Description</label>
          <textarea name="description" placeholder="Enter Description"
                    class="w-full px-3 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500 h-24 resize-none"><%= editing ? home.description : '' %></textarea>
        </div>

        <!-- Submit Button -->
        <button 
          type="submit"
          class="w-full py-2 rounded-md font-semibold transition duration-300 
                 <%= editing ? 'bg-green-500 hover:bg-green-600 text-white' : 'bg-red-500 hover:bg-red-600 text-white' %>">
          <%= editing ? 'Update Home' : 'Add Home' %>
        </button>
      </form>
    </div>
  </main>
</body>
</html>
