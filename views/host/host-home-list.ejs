<%- include('../partials/head') %>
</head>

<body class="bg-gray-50">
  <%- include('../partials/nav') %>

  <% if (registeredHomes && registeredHomes.length > 0) { %>
    <main class="container mx-auto mt-8 px-4">
      <div class="bg-white rounded-xl shadow-lg p-6 sm:p-8 max-w-6xl mx-auto">
        
        <!-- Title -->
        <h2 class="text-2xl sm:text-3xl font-bold text-center text-[#FF385C] mb-8">
          Your Registered Homes
        </h2>

        <!-- Homes Grid -->
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
          <% registeredHomes.forEach(home => { %>
            <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition duration-300 flex flex-col">
              
              <!-- Image -->
              <% if (isloggedIn) { %>
                <a href="/host/editHomes/<%= home._id %>?editing=true">
              <% } %>
                  <img src="<%= home.photo %>" 
                       alt="<%= home.houseName %>" 
                       class="w-full h-52 object-cover transform hover:scale-105 transition duration-300" />
                </a>

              <!-- Content -->
              <div class="p-4 flex flex-col flex-grow">
                <h3 class="text-lg sm:text-xl font-semibold text-gray-800 mb-1">
                  <%= home.houseName %>
                </h3>
                <p class="text-gray-600 text-sm mb-3">
                  <i class="fas fa-map-marker-alt mr-2"></i>
                  <%= home.location %>
                </p>

                <!-- Price + Rating -->
                <div class="flex justify-between items-center mb-4">
                  <span class="text-base sm:text-lg font-bold text-red-500">
                    ₹ <%= home.price %> / night
                  </span>
                  <div class="flex items-center text-sm">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" 
                         viewBox="0 0 24 24" class="w-5 h-5 text-yellow-400 mr-1">
                      <path fill-rule="evenodd" d="M10.788 3.21c.448-1.077 
                        1.976-1.077 2.424 0l2.082 5.007 5.404.433c1.164.093 
                        1.636 1.545.749 2.305l-4.117 3.527 
                        1.257 5.273c.271 1.136-.964 2.033-1.96 
                        1.425L12 18.354 7.373 21.18c-.996.608-2.231
                        -.29-1.96-1.425l1.257-5.273-4.117-3.527
                        c-.887-.76-.415-2.212.749-2.305l5.404-.433 
                        2.082-5.006z" clip-rule="evenodd"/>
                    </svg>
                    <span class="text-gray-700"><%= home.rating %></span>
                  </div>
                </div>

                <!-- Actions -->
                <% if (isloggedIn) { %>
                  <div class="mt-auto flex gap-3">
                    <!-- Edit -->
                    <a href="/host/editHomes/<%= home._id %>?editing=true" 
                       class="flex-1 inline-flex items-center justify-center px-4 py-2 rounded-full 
                              bg-blue-600 text-white text-sm font-medium shadow-sm 
                              hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-300 transition">
                      Edit
                    </a>
                    
                    <!-- Delete -->
                    <form action="/host/Delete-home/<%= home._id %>" method="POST" class="flex-1">
                      <button type="submit" 
                              class="w-full inline-flex items-center justify-center px-4 py-2 rounded-full 
                                     bg-red-500 text-white text-sm font-medium shadow-sm 
                                     hover:bg-red-600 focus:outline-none focus:ring-2 focus:ring-red-300 transition">
                        Delete
                      </button>
                    </form>
                  </div>
                <% } %>
              </div>
            </div>
          <% }) %>
        </div>
      </div>
    </main>
  <% } else { %>
    <!-- Empty State -->
    <div class="container mx-auto max-w-2xl mt-16 px-4">
      <div class="flex flex-col items-center justify-center py-12 bg-gray-50 rounded-xl shadow-inner">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 text-gray-400 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
            d="M9 13h6m-3-3v6m9-4a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
        <p class="text-gray-600 text-lg font-medium mb-3">
          You haven’t added any homes yet.
        </p>
        <a href="/host/add-home"
           class="inline-block px-6 py-2 bg-red-500 text-white rounded-full shadow-md 
                  hover:bg-red-600 transition">
          Add Your First Home
        </a>
      </div>
    </div>
  <% } %>
</body>
</html>
