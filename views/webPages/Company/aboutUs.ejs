      <!-- Mission & Values -->
      <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-8 text-center">

        <div class="p-6 bg-pink-50 dark:bg-pink-900 rounded-2xl shadow hover:shadow-lg transition">
