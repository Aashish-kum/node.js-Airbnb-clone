<%- include('../../partials/head') %>
</head>
<body class="bg-gray-50 dark:bg-gray-900 text-gray-900 dark:text-gray-100 transition-colors duration-300">

  <main class="container mx-auto mt-10 px-6 sm:px-8">
    <section class="bg-white dark:bg-gray-800 shadow-xl rounded-3xl p-8 sm:p-12 space-y-12 transition-colors duration-300 animate-fadeInUp">

      <!-- Hero -->
      <div class="text-center space-y-6">
        <i class="fa-solid fa-book-open text-indigo-600 text-5xl"></i>
        <h1 class="text-4xl sm:text-5xl font-extrabold text-gray-900 dark:text-gray-100">
          Explore Hosting Resources
        </h1>
        <p class="text-lg sm:text-xl text-gray-600 dark:text-gray-300 max-w-3xl mx-auto">
          Get the tools, knowledge, and guidance you need to become a successful host. 
          Explore tips, best practices, and resources curated just for you.
        </p>
      </div>

      <!-- Resource Grid -->
      <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-8">

        <!-- Resource Card Template -->
        <% const resources = [
          { icon: 'fa-lightbulb', title: 'Hosting Tips', desc: 'Learn how to create a welcoming space, set competitive pricing, and improve your guest experience.', link: '/getting-started', linkText: 'Learn More ‚Üí' },
          { icon: 'fa-screwdriver-wrench', title: 'Tools & Features', desc: 'Explore dashboards, booking management tools, and features designed to help you succeed.', link: '/dashboard', linkText: 'Explore Tools ‚Üí' },
          { icon: 'fa-shield-heart', title: 'Safety & Support', desc: 'Learn about AirCover, guest verification, and support resources available to every host.', link: '/airCover', linkText: 'Discover More ‚Üí' },
          { icon: 'fa-users', title: 'Community', desc: 'Join the host community, connect with others, and share your experiences in the forum.', link: '/community-forum', linkText: 'Visit Forum ‚Üí' },
          { icon: 'fa-graduation-cap', title: 'Learning Hub', desc: 'Access guides, tutorials, and training resources to improve your hosting skills.', link: '#', linkText: 'Start Learning ‚Üí' },
          { icon: 'fa-chart-line', title: 'Grow Your Business', desc: 'Learn strategies to increase bookings, boost visibility, and grow your hosting income.', link: '#', linkText: 'See Strategies ‚Üí' }
        ]; %>

        <% resources.forEach(resource => { %>
          <div class="p-6 bg-indigo-50 dark:bg-indigo-900 rounded-2xl shadow hover:shadow-lg transition focus-within:ring-2 focus-within:ring-indigo-500" tabindex="0">
            <i class="fa-solid <%= resource.icon %> text-3xl text-indigo-600 mb-4"></i>
            <h3 class="font-bold text-lg text-gray-900 dark:text-gray-100"><%= resource.title %></h3>
            <p class="text-gray-600 dark:text-gray-300 text-sm mt-2"><%= resource.desc %></p>
            <a href="<%= resource.link %>" class="text-indigo-600 hover:underline text-sm mt-3 inline-block"><%= resource.linkText %></a>
          </div>
        <% }) %>

      </div>

      <!-- CTA -->
      <div class="bg-indigo-50 dark:bg-indigo-900 border border-indigo-200 dark:border-indigo-700 p-8 rounded-2xl text-center space-y-6 transition-colors duration-300">
        <h3 class="text-2xl font-semibold text-indigo-700 dark:text-indigo-400">üöÄ Ready to level up your hosting journey?</h3>
        <p class="text-gray-600 dark:text-gray-300">Use these resources to become a confident and successful host.</p>
        <div class="flex flex-col sm:flex-row justify-center gap-4">
          <a href="/hosting" 
             class="bg-indigo-600 dark:bg-indigo-700 text-white px-8 py-3 rounded-xl shadow hover:bg-indigo-700 dark:hover:bg-indigo-600 transition text-lg">
            Start Hosting
          </a>
          <a href="/" 
             class="bg-gray-700 dark:bg-gray-800 text-white px-8 py-3 rounded-xl shadow hover:bg-gray-900 dark:hover:bg-gray-700 transition text-lg">
            ‚Üê Back to Home
          </a>
        </div>
      </div>

    </section>
  </main>
<style>
    @keyframes fadeInUp {
      from {
        opacity: 0;
        transform: translateY(20px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
    .animate-fadeInUp {
      animation: fadeInUp 0.3s ease-out;
    }
  </style>
</body>
</html>
