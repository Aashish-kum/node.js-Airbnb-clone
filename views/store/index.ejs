<%- include('../partials/head') %>
  </head>

  <body>
    <%- include('../partials/nav') %>
      <main class="container mx-auto bg-white shadow-lg rounded-lg p-6 sm:p-8 mt-10 max-w-6xl">
        <h2 class="text-2xl sm:text-3xl text-red-500 font-bold text-center mb-6">
          Here are our registered homes:
        </h2>

        <!-- Responsive Grid -->
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
          <% registeredHomes.forEach(home=> { %>
            <div
              class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition duration-300 flex flex-col">

              <!-- Image -->
              <% if (userType==="guest" ) { %>
                <a href="/homes/<%= home._id %>">
                  <% } %>
                    <img src="<%= home.photo %>"
                      class="w-full h-52 object-cover transform hover:scale-105 transition duration-300" />
                </a>


                <!-- Content -->
                <div class="p-4 flex flex-col flex-grow">
                  <h3 class="text-lg sm:text-xl font-semibold text-gray-800 mb-2">
                    <%= home.houseName %>
                  </h3>
                  <p class="text-gray-600 mb-2">
                    <i class="fas fa-map-marker-alt mr-2"></i>
                    <%= home.location %>
                  </p>

                  <!-- Price + Rating -->
                  <div class="flex justify-between items-center mb-4">
                    <span class="text-base sm:text-lg font-bold text-red-500">
                      Rs <%= home.price %> / night
                    </span>
                    <div class="flex items-center">
                      <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 24 24"
                        class="w-5 h-5 text-yellow-400 mr-1">
                        <path fill-rule="evenodd" d="M10.788 3.21c.448-1.077 1.976-1.077 
                       2.424 0l2.082 5.007 5.404.433c1.164.093 
                       1.636 1.545.749 2.305l-4.117 3.527 
                       1.257 5.273c.271 1.136-.964 2.033-1.96 
                       1.425L12 18.354 7.373 21.18c-.996.608-2.231
                       -.29-1.96-1.425l1.257-5.273-4.117-3.527
                       c-.887-.76-.415-2.212.749-2.305l5.404-.433 
                       2.082-5.006z" clip-rule="evenodd" />
                      </svg>
                      <span class="text-gray-700">
                        <%= home.rating %>
                      </span>
                    </div>
                  </div>

                  <!-- Buttons -->
                  <div class="mt-auto flex gap-3">
                    <!-- Details Button -->
                    <% if (userType==="guest" ) { %>
                      <a href="/bookings"
                        class="flex-1 bg-blue-600 text-white py-2 rounded-lg font-medium text-center hover:bg-blue-700 transition">
                        Book Now
                      </a>
                      <% } %>
                  </div>
                </div>
            </div>
            <% }) %>
        </div>
      </main>
      <%- include('../partials/footer.ejs') %>
  </body>

  </html>