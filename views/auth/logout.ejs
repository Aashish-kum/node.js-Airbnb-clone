<%- include('../partials/head') %>
</head>

<body class="bg-gray-100 dark:bg-gray-900 text-gray-900 dark:text-gray-100 transition-colors duration-300">
  <% if (!(currentPage === 'logout')) { %>
    <%- include('../partials/nav') %>
  <% } %>

  <!-- Fullscreen Modal -->
  <main class="fixed inset-0 flex items-center justify-center bg-black/40 backdrop-blur-sm z-50">
    <div
      class="bg-white dark:bg-gray-800 rounded-3xl shadow-2xl p-10 w-full max-w-lg text-center transform scale-90 opacity-0 animate-fadeInUp"
    >
      <!-- Animated Icon -->
      <div class="flex justify-center mb-6">
        <div class="bg-red-100 dark:bg-red-900 p-6 rounded-full animate-pulse">
          <svg xmlns="http://www.w3.org/2000/svg"
               class="h-14 w-14 text-red-500 dark:text-red-400 animate-bounce-slow"
               fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a2 2 
                 0 01-2 2H7a2 2 0 01-2-2V7a2 2 
                 0 012-2h4a2 2 0 012 2v1"/>
          </svg>
        </div>
      </div>

      <!-- Title -->
      <h1 class="text-3xl font-bold mb-3">Logout Confirmation</h1>
      <p class="text-gray-600 dark:text-gray-300 mb-8">
        Are you sure you want to log out?<br />
        Youâ€™ll need to sign in again to access your account.
      </p>

      <!-- Buttons -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <!-- Cancel -->
        <a href="/"
           class="px-6 py-3 rounded-xl bg-gray-200 dark:bg-gray-700 
                  text-gray-800 dark:text-gray-200 font-medium 
                  hover:bg-gray-300 dark:hover:bg-gray-600 
                  transition shadow-sm hover:shadow-md">
          Cancel
        </a>

        <!-- Logout -->
        <form action="/logout" method="POST">
          <button type="submit"
                  class="px-6 py-3 rounded-xl bg-red-500 text-white font-medium 
                         hover:bg-red-600 dark:bg-red-600 dark:hover:bg-red-700 
                         transition shadow-md hover:shadow-lg">
            Logout
          </button>
        </form>
      </div>
    </div>
  </main>

  <!-- Animations -->
  <style>
    @keyframes fadeInUp {
      0% {
        opacity: 0;
        transform: translateY(40px) scale(0.9);
      }
      100% {
        opacity: 1;
        transform: translateY(0) scale(1);
      }
    }
    .animate-fadeInUp {
      animation: fadeInUp 0.4s ease-out forwards;
    }
    @keyframes bounce-slow {
      0%, 100% { transform: translateY(0); }
      50% { transform: translateY(-6px); }
    }
    .animate-bounce-slow {
      animation: bounce-slow 2s infinite;
    }
  </style>
</body>
</html>
