  <body>
    <%- include('../partials/nav') %>
   <main class="flex min-h-screen items-center justify-center p-6">
    <div class="w-full max-w-md">
      <!-- Header / brand -->
      <div class="mb-6 flex items-center justify-center gap-2">
        <div class="h-8 w-8 rounded-full bg-[#FF385C]"></div>
        <span class="text-2xl font-bold tracking-tight text-[#FF385C]">airbnb</span>
      </div>

      <!-- Card -->
      <div class="rounded-2xl bg-white p-6 shadow-xl ring-1 ring-black/5">
        <h1 class="mb-1 text-xl font-semibold">Welcome back</h1>
        <p class="mb-6 text-sm text-neutral-600">Sign in to continue</p>

        <form class="space-y-4" action="/login" method="POST" novalidate>
          <%- include('../partials/errorAuth.ejs') %>
          <!-- Email or phone -->
          <div>
            <label for="identifier" class="mb-1 block text-sm font-medium">Email or phone</label>
            <input
              id="identifier"
              name="email"
              type="text"
              value="<%= oldInput.email ? oldInput.email : '' %>"
              inputmode="email"
              autocomplete="email"
              required
              class="focus-ring w-full rounded-xl border border-neutral-300 bg-white px-3 py-2 text-sm shadow-sm placeholder:text-neutral-400"
              placeholder="you@example.com"
              required
            />
            <p id="idError" class="mt-1 hidden text-xs text-red-600">Please enter a valid email or phone number.</p>
          </div>

          <!-- Password -->
          <div>
            <div class="flex items-center justify-between">
              <label for="password" class="mb-1 block text-sm font-medium">Password</label>
              <!-- <a href="/forgot-password" class="text-xs font-medium text-neutral-700 underline underline-offset-2 hover:text-neutral-900">Forgot?</a> -->
            </div>
            <div class="relative">
              <input
                id="password"
                name="password"
                type="password"
                autocomplete="current-password"
                required
                minlength="6"
                class="focus-ring w-full rounded-xl border border-neutral-300 bg-white px-3 py-2 pr-12 text-sm shadow-sm placeholder:text-neutral-400"
                placeholder="••••••••"
                required 
              />
              <!-- <button type="button" id="togglePw"
                class="absolute inset-y-0 right-0 my-1 mr-1 rounded-lg px-3 text-xs font-medium text-neutral-700 hover:bg-neutral-100 focus-ring">
                Show
              </button> -->
            </div>
            <p id="pwError" class="mt-1 hidden text-xs text-red-600">Password must be at least 6 characters.</p>
          </div>

          <!-- Remember me -->
          <!-- <div class="flex items-center">
            <input id="remember" name="remember" type="checkbox"
              class="focus-ring h-4 w-4 rounded border-neutral-300 text-[#FF385C]" />
            <label for="remember" class="ml-2 text-sm text-neutral-700">Remember me</label>
          </div> -->

          <!-- Submit -->
          <button
            type="submit"
            value="Login"
            class="w-full rounded-xl bg-[#FF385C] px-4 py-2 text-sm font-semibold text-white shadow-md transition hover:brightness-95 focus-ring active:translate-y-px"
          >
            Continue
          </button>

          <!-- Divider -->
          <div class="relative py-2 text-center text-sm text-neutral-500">
            <span class="relative z-10 bg-white px-2">or</span>
            <span class="absolute left-0 top-1/2 h-px w-full -translate-y-1/2 bg-neutral-200"></span>
          </div>

