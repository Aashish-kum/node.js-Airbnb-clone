                            <!-- Email or phone -->
                            <div>
                                <label for="email" class="mb-1 block text-sm font-medium">Email or
                                    phone</label>
                                <input id="email" name="email" type="email"
                                    value="<%= oldInput.email ? oldInput.email : '' %>" required
                                    class="focus-ring w-full rounded-xl border border-neutral-300 bg-white px-3 py-2 text-sm shadow-sm placeholder:text-neutral-400"
                                    placeholder="you@example.com or +91 98765 43210" />
                            </div>

                            <!-- Password -->
                            <div>
                                <label for="password" class="mb-1 block text-sm font-medium">Password</label>
                                <input id="password" name="password" type="password"
                                    required
                                    class="focus-ring w-full rounded-xl border border-neutral-300 bg-white px-3 py-2 text-sm shadow-sm placeholder:text-neutral-400"
                                    placeholder="••••••••" />
                            </div>

                            <!-- Confirm Password -->
                            <div>
                                <label for="confirmPassword" class="mb-1 block text-sm font-medium">Confirm
                                    Password</label>
                                <input id="confirmPassword" name="confirmPassword" type="password"
                                    required
                                    class="focus-ring w-full rounded-xl border border-neutral-300 bg-white px-3 py-2 text-sm shadow-sm placeholder:text-neutral-400"
                                    placeholder="••••••••" />
                            </div>


                            <!-- User Type (Guest / Host) -->
                            <!-- User Type (Guest / Host) -->
                            <div class="mb-4">
                                <p class="mb-2 text-sm font-medium text-neutral-700">I am a</p>
                                <div class="flex gap-6">
                                    <label class="flex items-center gap-2 cursor-pointer">
                                        <input id="guest" name="userType" value="guest" type="radio"
                                            class="focus:ring-[#FF385C] h-4 w-4 border-neutral-300 text-[#FF385C]"
                                            checked="<%= oldInput.usertype === 'guest' ? 'checked' : '' %>" />
                                        <span class="text-sm text-neutral-700">Guest</span>
                                    </label>

                                    <label class="flex items-center gap-2 cursor-pointer">
                                        <input id="host" name="userType" value="host" type="radio"
                                            class="focus:ring-[#FF385C] h-4 w-4 border-neutral-300 text-[#FF385C]"
                                            checked="<%= oldInput.usertype === 'guest' ? 'checked' : '' %>" />
                                        <span class="text-sm text-neutral-700">Host</span>
                                    </label>
                                </div>
                            </div>


                            <!-- Remember me -->
                            <div class="flex items-center">
                                <label class="inline-flex items-center cursor-pointer">
                                    <input type="checkbox" name="terms" id="terms"
                                        class="form-checkbox text-red-500 focus:ring-red-500" />
                                    <span class="ml-2 text-gray-700">I agree to the <a href="#"
                                            class="text-red-500 hover:underline">terms and conditions</a></span>
                                </label>
                            </div>


                            <!-- Submit -->
                            <button type="submit"
                                class="w-full rounded-xl bg-[#FF385C] px-4 py-2 text-sm font-semibold text-white shadow-md transition hover:brightness-95 focus-ring active:translate-y-px">
                                Sign up
                            </button>



                            <!-- Divider -->
                            <div class="relative py-2 text-center text-sm text-neutral-500">
                                <span class="relative z-10 bg-white px-2">or</span>
                                <span
                                    class="absolute left-0 top-1/2 h-px w-full -translate-y-1/2 bg-neutral-200"></span>
                            </div>

