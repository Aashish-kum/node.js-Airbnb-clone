<%- include('../partials/head.ejs') %>
  </head>

  <body class="min-h-screen bg-neutral-50 dark:bg-gray-900 text-neutral-900 dark:text-neutral-100 antialiased transition-colors duration-300">
    <%- include('../partials/nav.ejs') %>

    <main class="flex min-h-screen items-center justify-center p-6">
      <div class="w-full max-w-md">
        <!-- Header / brand -->
        <div class="mb-6 flex items-center justify-center gap-2">
          <div class="h-8 w-8 rounded-full bg-[#FF385C]"></div>
          <span class="text-2xl font-bold tracking-tight text-[#FF385C]">airbnb</span>
        </div>

        <!-- Card -->
        <div class="rounded-2xl bg-white dark:bg-gray-800 p-6 shadow-xl ring-1 ring-black/5 dark:ring-white/10 transition-colors duration-300">
          <h1 class="mb-1 text-xl font-semibold text-gray-900 dark:text-gray-100">Create your account</h1>
          <p class="mb-6 text-sm text-gray-600 dark:text-gray-300">Sign up to get started</p>

          <form class="space-y-4" action="/signup" method="POST">
            <%- include('../partials/errorAuth.ejs') %>

            <!-- Full name -->
            <div>
              <label for="fullname" class="mb-1 block text-sm font-medium text-gray-700 dark:text-gray-300">Full name</label>
              <input id="fullname" name="fullname" type="text"
                value="<%= oldInput.fullname ? oldInput.fullname : '' %>" required
                class="focus-ring w-full rounded-xl border border-neutral-300 dark:border-gray-600 bg-white dark:bg-gray-700 px-3 py-2 text-sm text-gray-900 dark:text-gray-100 shadow-sm placeholder:text-neutral-400 dark:placeholder:text-gray-400 transition-colors duration-300"
                placeholder="John Doe" />
            </div>

            <!-- Email or phone -->
            <div>
              <label for="email" class="mb-1 block text-sm font-medium text-gray-700 dark:text-gray-300">Email or phone</label>
              <input id="email" name="email" type="email"
                value="<%= oldInput.email ? oldInput.email : '' %>" required
                class="focus-ring w-full rounded-xl border border-neutral-300 dark:border-gray-600 bg-white dark:bg-gray-700 px-3 py-2 text-sm text-gray-900 dark:text-gray-100 shadow-sm placeholder:text-neutral-400 dark:placeholder:text-gray-400 transition-colors duration-300"
                placeholder="you@example.com or +91 98765 43210" />
            </div>

            <!-- Password -->
            <div>
              <label for="password" class="mb-1 block text-sm font-medium text-gray-700 dark:text-gray-300">Password</label>
              <div class="relative">
                <input id="password" name="password" type="password" required
                  class="focus-ring w-full rounded-xl border border-neutral-300 dark:border-gray-600 bg-white dark:bg-gray-700 px-3 py-2 pr-12 text-sm text-gray-900 dark:text-gray-100 shadow-sm placeholder:text-neutral-400 dark:placeholder:text-gray-400 transition-colors duration-300"
                  placeholder="••••••••" />
                <button type="button" id="togglePw"
                  class="absolute inset-y-0 right-0 my-1 mr-1 rounded-lg px-3 text-xs font-medium text-gray-700 dark:text-gray-200 hover:bg-neutral-100 dark:hover:bg-gray-600 focus-ring transition-colors duration-300">
                  Show
                </button>
              </div>
            </div>

            <!-- Confirm Password -->
            <div>
              <label for="confirmPassword" class="mb-1 block text-sm font-medium text-gray-700 dark:text-gray-300">Confirm Password</label>
              <div class="relative">
                <input id="confirmPassword" name="confirmPassword" type="password" required
                  class="focus-ring w-full rounded-xl border border-neutral-300 dark:border-gray-600 bg-white dark:bg-gray-700 px-3 py-2 pr-12 text-sm text-gray-900 dark:text-gray-100 shadow-sm placeholder:text-neutral-400 dark:placeholder:text-gray-400 transition-colors duration-300"
                  placeholder="••••••••" />
              </div>
            </div>

            <!-- User Type (Guest / Host) -->
            <div class="mb-4">
              <p class="mb-2 text-sm font-medium text-gray-700 dark:text-gray-300">I am a</p>
              <div class="flex gap-6">
                <label class="flex items-center gap-2 cursor-pointer">
                  <input id="guest" name="userType" value="guest" type="radio"
                    class="focus:ring-[#FF385C] h-4 w-4 border-neutral-300 text-[#FF385C]"
                    checked="<%= oldInput.usertype === 'guest' ? 'checked' : '' %>" />
                  <span class="text-sm text-gray-700 dark:text-gray-300">Guest</span>
                </label>
                <label class="flex items-center gap-2 cursor-pointer">
                  <input id="host" name="userType" value="host" type="radio"
                    class="focus:ring-[#FF385C] h-4 w-4 border-neutral-300 text-[#FF385C]"
                    checked="<%= oldInput.usertype === 'host' ? 'checked' : '' %>" />
                  <span class="text-sm text-gray-700 dark:text-gray-300">Host</span>
                </label>
              </div>
            </div>

            <!-- Terms -->
            <div class="flex items-center">
              <label class="inline-flex items-center cursor-pointer">
                <input type="checkbox" name="terms" id="terms"
                  class="form-checkbox text-red-500 focus:ring-red-500" />
                <span class="ml-2 text-gray-700 dark:text-gray-300">I agree to the <a href="#"
                    class="text-red-500 hover:underline">terms and conditions</a></span>
              </label>
            </div>

            <!-- Submit -->
            <button type="submit"
              class="w-full rounded-xl bg-[#FF385C] px-4 py-2 text-sm font-semibold text-white shadow-md transition hover:brightness-95 focus-ring active:translate-y-px">
              Sign up
            </button>

            <!-- Divider -->
            <div class="relative py-2 text-center text-sm text-gray-500 dark:text-gray-400">
              <span class="relative z-10 bg-white dark:bg-gray-800 px-2">or</span>
              <span class="absolute left-0 top-1/2 h-px w-full -translate-y-1/2 bg-neutral-200 dark:bg-gray-600"></span>
            </div>

            <!-- Terms -->
            <p class="mt-4 text-center text-[13px] leading-5 text-gray-500 dark:text-gray-400">
              By signing up, you agree to Airbnb’s <a href="#" class="underline">Terms</a> and
              acknowledge our <a href="#" class="underline">Privacy Policy</a>.
            </p>
          </form>
        </div>

        <!-- Footer -->
        <p class="mt-6 text-center text-sm text-gray-500 dark:text-gray-400">
          Already have an account?
          <a href="/login"
            class="font-medium text-gray-700 dark:text-gray-200 underline underline-offset-2 hover:text-gray-900 dark:hover:text-white">Log in</a>
        </p>
      </div>
    </main>

    <!-- Show Password Script -->
    <script>
      const passwordInput = document.getElementById('password');
      const toggleButton = document.getElementById('togglePw');

      toggleButton.addEventListener('click', () => {
        const type = passwordInput.getAttribute('type') === 'password' ? 'text' : 'password';
        passwordInput.setAttribute('type', type);
        toggleButton.textContent = type === 'password' ? 'Show' : 'Hide';
      });
    </script>
  </body>
</html>
