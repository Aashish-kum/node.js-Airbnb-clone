                        <span class="text-2xl font-bold tracking-tight text-[#FF385C]">airbnb</span>
                    </div>

                    <!-- Card -->
                    <div class="rounded-2xl bg-white p-6 shadow-xl ring-1 ring-black/5">
                        <h1 class="mb-1 text-xl font-semibold">Create your account</h1>
                        <p class="mb-6 text-sm text-neutral-600">Sign up to get started</p>

                        <form class="space-y-4" action="/signup" method="POST">
                            <%- include('../partials/errorAuth.ejs')%>
                            <!-- Full name -->
                            <div>
                                <label for="fullname" class="mb-1 block text-sm font-medium">Full name</label>
                                <input id="fullname" name="fullname" type="text"
                                    value="<%= oldInput.fullname ? oldInput.fullname : '' %>" required
                                    class="focus-ring w-full rounded-xl border border-neutral-300 bg-white px-3 py-2 text-sm shadow-sm placeholder:text-neutral-400"
                                    placeholder="John Doe" />
                            </div>

                            <!-- Last name -->
